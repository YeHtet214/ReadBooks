<%- include('partials/header.ejs') %>

<div id="register-container">
    <h1>Please register to create your list of books!</h1>
    <form action="/register/post" method="POST">
        <div class="form-group">
            <input type="text" id="username" name="username" onfocus="toogleLabel(this)" onblur="toogleLabel(this)">
            <label for="username">Username</label>
        </div>
    
        <div class="form-group">
            <input type="password" id="password" name="password" onfocus="toogleLabel(this)" onblur="toogleLabel(this)">
            <label for="password">password</label>
        </div>
    
        <button type="submit" class="primary-btn">Register</button>
    </form>

</div>

